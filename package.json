    "govuk-frontend": "^4.7.0",
    "govuk-prototype-kit": "13.13.6",
    "i18next": "^23.7.7",
    "i18next-fs-backend": "^2.3.0",
    "i18next-http-middleware": "^3.5.0",
    "path": "^0.12.7"
  },
  "engines": {
    "node": "18.x"
  },
  "devDependencies": {
    "@cucumber/cucumber": "10.0.1",
