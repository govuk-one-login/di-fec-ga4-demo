{% if params.language === 'en' %}
  <link rel="stylesheet" type="text/css" href="/styles.css">
  <nav class="onelogin-language-select" aria-label="Language switcher">
    <ul class="onelogin-language-select__list">
      <li class="onelogin-language-select__list-item">
        <span aria-current="true">English</span>
      </li>
      <li class="onelogin-language-select__list-item">
        <a href="{{ params.cy.href }}"
          hreflang="cy"
          lang="cy"
          rel="alternate"
          class="govuk-link"
          data-journey-click="link - click:lang-select:Cymraeg">
          <span class="govuk-visually-hidden">Newid yr iaith ir Gymraeg</span>
          <span aria-hidden="true">Cymraeg</span>
        </a>
      </li>
    </ul>
  </nav>
{% endif %}

{% if params.language === 'cy' %}
  <link rel="stylesheet" type="text/css" href="/styles.css">
  <nav class="onelogin-language-select" aria-label="Switcher iaith">
    <ul class="onelogin-language-select__list">
      <li class="onelogin-language-select__list-item">
        <a href="{{ params.en.href }}"
          hreflang="en"
          lang="en"
          rel="alternate"
          class="govuk-link"
          data-journey-click="link - click:lang-select:English">
          <span class="govuk-visually-hidden">Change the language to English</span>
          <span aria-hidden="true">English</span>
        </a>
      </li>
      <li class="onelogin-language-select__list-item">
        <span aria-current="true">Cymraeg</span>
      </li>
    </ul>
  </nav>
{% endif %}



<nav class="language-select" aria-label="Choose a language">
    <ul class="govuk-list language-select__list">
        {% for lang in ['en', 'cy'] %}
            <li class="language-select__list-item">
                {% set translationKey = 'general.languageToggle.' + lang + '.linkText' %}
                {% if language == lang %}
                    <span aria-current="page">{{ translationKey | translate }}</span>
                {% else %}
                    <a class="govuk-link govuk-link--no-visited-state language-select__link"
                       lang="{{ lang }}" hreflang="{{ lang }}" href="{{ currentUrl | addLanguageParam(lang, baseUrl) }}">
                        {{ translationKey | translate }}
                    </a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</nav>
